
# command params ...
# reserved fields are: id, title, ctime, mtime, author
addField status select "open" "closed" "deleted"
addField owner selectUser
addField target_version select \
    "non renseigne" \
    v0.1 \
    v0.2 \
    v0.3 \
    v0.4


addField tags multiselect v4.0 v4.1 v5.0

setPropertyLabel title Description
setPropertyLabel id "#"
setPropertyLabel ctime "Date de cr√©ation"
setPropertyLabel mtime "Date de modification"
setPropertyLabel status Statut
setPropertyLabel owner Responsable
setPropertyLabel target_version  "Version cible"
setPropertyLabel tags Tags
setPropertyLabel message Message
setPropertyLabel long-line-break-message "Utiliser des lignes longues"
setPropertyLabel Add-Message "Valider le message"



# links in the header of the page
addPredefinedView "Open issues" "filter=status:open&sort=mtime"
addPredefinedView "Deleted issues" "filter=status:deleted"

# when 'colspec' is not given in the url query string
setDefaultColspec "id+title+mtime+owner"
# when 'filter' is not given in the url query string
setDefaultFilter "status:open"
# when 'sort' is not given in the url query string
setDefaultSorting "sort=mtime"


