
# command params ...
# reserved fields are: id, title, ctime, mtime, author
addField status label "Statut" select "open" "closed" "deleted"
addField owner label "Responsable" selectUser
addField target_version label "Version cible" select \
    "non renseigne" \
    v0.1 \
    v0.2 \
    v0.3 \
    v0.4


addField tags multiselect v4.0 v4.1 v5.0


# links in the header of the page
addListDisplay "Open issues" "filter=status:open&sort=mtime"
addListDisplay "Deleted issues" "filter=status:deleted"

# when 'colspec' is not given in the url query string
setDefaultColspec "id+title+mtime+owner"
# when 'filter' is not given in the url query string
setDefaultFilter "status:open"
# when 'sort' is not given in the url query string
setDefaultSorting "sort=mtime"


