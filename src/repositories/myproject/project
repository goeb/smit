
# command params ...

addColumn status select "open" "closed" "deleted"
addColumn owner select user
addColumn target_version select \
    "non renseigne" \
    v0.1 \
    v0.2 \
    v0.3 \
    v0.4


addColumn tags select_multiple v4.0 v4.1 v5.0

default_display "colspec=mtime+title+status+owner+id"

custom_display "Open issues" "filter=status:open&sort=mtime"
custom_display "Deleted issues" "filter=status:deleted"

