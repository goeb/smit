addView "All issues" \
    sort -mtime \

addView "Closed issues" \
    filterin status closed \
    colspec id+summary \

addView "Deleted issues" \
    filterin status deleted \

addView "Open issues" \
    filterin status open \
    sort +target_version-mtime \

addView "Test View2" \
    filterin status open \
    filterout ctime 1212 \
    filterout target_version open \
    sort -mtime \
    colspec id+summary+status+mtime \

