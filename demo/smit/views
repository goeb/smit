+smv 1.6.0-rc1
addView "All issues" \
    sort -mtime+id \

addView "Closed issues" \
    filterin status closed \
    sort +target_version \
    colspec id+summary \

addView "My issues" \
    filterin owner me \
    sort +status-mtime \

addView "Open issues" \
    default \
    filterin status open \
    sort +target_version-mtime \

