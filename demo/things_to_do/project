
# command params ...
# reserved fields are: id, title, ctime, mtime
addField status select "open" "closed" "deleted"
addField in_charge selectUser
addField due_date select \
    "" \
    "as soon as possible" \
    "next week" \
    "next month" 

setPropertyLabel title Description
setPropertyLabel id "#"
setPropertyLabel ctime "Created"
setPropertyLabel mtime "Modified"
setPropertyLabel status Status
setPropertyLabel in_charge "Person in charge"
setPropertyLabel due_date "Due date"
setPropertyLabel message Message
setPropertyLabel long-line-break-message "Use long lines"
setPropertyLabel Add-Message "Validate"



# links in the header of the page
addPredefinedView "Open issues" "filter=status:open&sort=-mtime"
addPredefinedView "Deleted issues" "filter=status:deleted"

# when 'colspec' is not given in the url query string
setDefaultColspec "id+mtime+title+status+in_charge+due_date"
# when 'filter' is not given in the url query string
setDefaultFilter "status:all"
# when 'sort' is not given in the url query string
setDefaultSorting "sort=mtime"


