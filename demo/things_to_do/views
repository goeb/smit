
addView "Open Issues" \
    filterin status open \
    filterin status stalled \
    filterout tags v1.0 \
    sort +status-mtime \
    colspec id+mtime+summary+status+tags 


addView "Issues with \"hello world\"" \
    sort +status-mtime \
    colspec id+mtime+summary+status+tags \
    search "hello world" 

addView "All issues" sort +status-mtime 
    
